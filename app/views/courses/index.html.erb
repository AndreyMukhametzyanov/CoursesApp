<h1 class="text-center my-4">Платформа для онлайн курсов</h1>
<div>
	<div class="row">
		<div class="col-sm-12">
			<div class="row row-cols-1 row-cols-md-3 g-4">
				<% @courses.each do |course| %>
					<div class="col mb-4">
						<div class="card">
							<div class="card-body">
								<h5 class="card-title mb-4">
									<%= course.name %>
								</h5>
								<h6 class="card-title my-2">Описание:</h6> <%= course.description %>
								<p class="card-text mt-3">
									<%= link_to 'Подробнее', promo_course_path(course.id), class: 'btn btn-outline-primary' %>
								</p>
							</div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div>&copy; @andrey <%= Time.now.year %></div>
</div>

