<h5 class="my-3"><%= t('feedbacks.all_feedbacks') %></h5>
<% if Feedback.all.empty? %>
  <%= t('feedbacks.no_feedbacks') %>
<% else %>
  <% resource.feedbacks.includes(:user).each do |c| %>
    <div class="card mb-4" style="width: 40rem;">
      <div class="card-header">
        <div class="container">
          <div class="row">
            <div class="col-sm"><%= c.user.first_name %></div>
            <div class="col-sm"> Grade: <%= c.grade %></div>
            <div class="col-sm" style="padding-left: 30px;padding-right: 0px;">
              <%= c.created_at.strftime("%Y.%m.%d %H:%M") %> MSK
            </div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= c.body %></p>
      </div>
    </div>
  <% end %>
<% end %>

