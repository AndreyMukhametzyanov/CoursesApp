<%= simple_form_for [@course, @lesson] do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :youtube_video_id %>
  <%= f.input :order_factor, collection: 1..@course.lessons.count %>
  <%= f.button :submit, t('buttons.confirm'), class: "btn btn-outline-primary mt-3" %>
<% end %>
